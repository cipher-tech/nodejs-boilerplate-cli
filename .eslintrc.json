{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["airbnb-base"],
    "plugins": ["security", "prettier", "jest"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [1, 4, { "SwitchCase": 1 }],
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "class-methods-use-this": 0,
        "object-curly-newline": 0
    }
}
